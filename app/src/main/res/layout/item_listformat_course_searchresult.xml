<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/selector_item_listview"
    android:padding="15dp">
    <ImageView
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:id="@+id/iv_courseicon"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/iv_courseicon"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/coursename"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="test"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/tv_duedate"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="test"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:id="@+id/tv_lessoncount"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="test"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/ll_info"
        android:layout_height="wrap_content">
        <TextView
            android:drawablePadding="3dp"
            android:id="@+id/tv_ratecount"
            android:drawableRight="@drawable/ic_grey_rating"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="test"/>
        <TextView
            android:id="@+id/tv_viewcount"
            android:drawableRight="@drawable/ic_eye"
            android:drawablePadding="3dp"

            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="test"/>

    </LinearLayout>
</RelativeLayout>